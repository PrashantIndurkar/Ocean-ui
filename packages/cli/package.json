{
  "name": "@ocean-ui/cli",
  "version": "0.1.0",
  "description": "CLI tool for installing Ocean UI components",
  "type": "module",
  "bin": {
    "ocean-ui": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "components"
  ],
  "scripts": {
    "build": "tsc && node scripts/copy-components.js",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "eslint": "^9",
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}
