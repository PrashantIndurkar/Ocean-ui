{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "fumadocs-mdx:collections/*": [".source/*"],
      "@ocean-ui/react": ["../../packages/ui-react/src/index.ts"],
      "@ocean-ui/react/*": ["../../packages/ui-react/src/*"],
      "@ocean-ui/utils": ["../../packages/utils/src/index.ts"],
      "@ocean-ui/utils/*": ["../../packages/utils/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".source/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
