{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://components.prashantindurkar.in/schema/registry.json",
  "title": "Ocean UI Registry Index",
  "description": "Schema for Ocean UI registry index. Defines the structure for the registry index file that lists all available components.",
  "type": "object",
  "required": ["$schema", "name", "homepage", "items"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "Reference to this JSON schema"
    },
    "name": {
      "type": "string",
      "description": "The name of the registry (e.g., '@ocean-ui/react' or '@ocean-ui/solid')"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "The homepage URL of the registry"
    },
    "items": {
      "type": "array",
      "description": "Array of registry items",
      "items": {
        "$ref": "#/definitions/registryIndexItem"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "registryIndexItem": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the registry item (component slug)"
        },
        "type": {
          "type": "string",
          "description": "The type of registry item",
          "enum": [
            "registry:ui",
            "registry:recipe",
            "registry:theme",
            "registry:color"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}

